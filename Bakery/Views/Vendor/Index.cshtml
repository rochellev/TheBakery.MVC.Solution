<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Vendor Page</title>
</head>
<body>
  <h1>The Vendor Page</h1>
  <div>
      <h5>Click on a Vendor to view thier Details!</h5>
      <a href="/vendors/new">Create a new Vendor</a>
      <a href="/">Back to Home</a>
  </div>
  <div>
      @using Bakery.Models;
      @if(@Model.Count == 0)
      {
          <h3>No Vendors have been added yet!</h3>
      }
      @foreach (Vendor vendor in Model)
      {
          <h3>
              <a href="/vendors/@vendor.Id">@vendor.Name</a>
          </h3>   
      }
  </div>
</body>
</html>